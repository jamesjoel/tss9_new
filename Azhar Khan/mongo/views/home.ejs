<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css">
    <script type="text/javascript" src="js/jquery.js"></script>
    <script type="text/javascript" src="js/bootstrap.bundle.js"></script>
</head>
<body>
            <nav class="navbar navbar-expand-sm navbar-light bg-success">
                <a href="#" class="navbar-brand">MongoDB</a>
                <button class="navbar-toggler" data-target="#my" data-toggle="collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="my">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="/" class="nav-link">Show Student</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">About</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">Help</a>
                            </li>
                            <li class="nav-item" >
                                <a href="/add" class="nav-link">Add New</a>
                            </li>
                     </ul>
                </div>
            </nav>
                <br>
                <br>
              <div class="container-fluid">
                <div class="row">
                    <div class="col-md-9 offset-md-1">
                        
                          <table class="table table-dark table-hover table-bordred">
                              <tr class="bg-info">
                                  <th>S.No</th>
                                  <th>Name</th>
                                  <th>Delete</th>
                                  <th>View</th>
                                  <th>Edit</th>
                              </tr>

                              <tr>
                              <% data.forEach(function(x,n){ %>
                                  <td><%= n+1 %></td>
                                  <td><%= x.name %></td>
                                  <td><a href="/delete?id=<%= x._id %>" class="btn btn-danger">Delete</a></td>
                                  <td><a href="/view?myid=<%= x._id %>" class="btn btn-warning">View</a></td>

                                  <td><a href="/edit?sid=<%= x._id %>" class="btn btn-info">Edit</a></td>
                              </tr>

                              <% })%>


                          </table>
                   </div>
                </div>
              </div>

</body>
</html>