<html>
<head>
    <link type="text/css" rel="stylesheet" href="/css/bootstrap.css" />
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.bundle.js"></script>
</head>
<body>

        <nav class="navbar navbar-expand-md bg-dark navbar-dark">
                <!-- Brand -->
                <a class="navbar-brand" href="#">Student</a>
              
                <!-- Toggler/collapsibe Button -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                  <span class="navbar-toggler-icon"></span>
                </button>
              
                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                  <ul class="navbar-nav">
                    <li class="nav-item">
                      <a class="nav-link" href="/">Show All Student</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/add">Add New</a>
                    </li>
                    
                  </ul>
                </div> 
              </nav>
    <div class="container mt-4">
        <form action="/edit" method="post">
            <input type="hidden" name="id" value="<%= data._id %>" />
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="form-group">
                        <label>Student Name</label>
                        <input value="<%= data.name %>" type="Text" name="name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Student Age</label>
                        <input value="<%= data.age %>" type="Text" name="age" class="form-control" />
                    </div>
                <div class="form-group">
                    <label>Student City</label>
                    <select class="form-control" name="city">
                        <option>Select</option>
                        <option <% if(data.city == "Indore") { %> selected='selected' <% } %>>Indore</option>
                        <option <% if(data.city == "Mumbai") { %> selected='selected' <% } %>>Mumbai</option>
                        <option <% if(data.city == "Pune") { %> selected='selected' <% } %>>Pune</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Gender</label> 
                    <br />
                    Male <input <% if(data.gender=="male") { %> checked="checked" <% } %> name="gender" value="male" type="radio" />
                    Female <input <% if(data.gender=="female") { %> checked="checked" <% } %> name="gender" value="female" type="radio" />
                </div>
                <div class="form-group">
                    <label>Contact</label>
                    <input value="<%= data.contact %>" type="Text" name="contact" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Salary</label>
                    <input value="<%= data.salary %>" type="Text" name="salary" class="form-control" />
                </div>
                <input type="submit" value="Update" class="btn btn-primary"/>
            </div>
        </div>
    </form>
    </div>
    
</body>
</html>

