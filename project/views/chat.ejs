<script src="socket.io/socket.io.js"></script>
<script>
    var socket = io();
    socket.on("onlineUser", function(data){
        // console.log(data);
        $("#online-user").html("");
        for(var x in data)
        {

            $("#online-user").append(`<li class="list-group-item"><a onclick="select_user('${x}')" href='#'>${x}</a></li>`);
        }
            
        
    });
    function select_user(name)
    {
        $("#select-user").html(name);   
    }
</script>
<h2 class="text-center">Chat Window</h2>

<div class="row">
    
    <div class="col-md-3">
        <h3>Online User</h3>
        <ul id="online-user" class="list-group">

        </ul>
    </div>
    <div class="col-md-9">
        <div class="bg-secondary" style="min-height: 400px; width: 100%">
            <h4>Chat With <span class="badge badge-info" id="select-user"></span></h4>
        </div>
        <div class="form-group">
            <input type="text" placeholder="Your Message" class="form-control" />
            <br />
            <button class="btn btn-sm btn-primary">Send</button>
        </div>
    </div>
</div>